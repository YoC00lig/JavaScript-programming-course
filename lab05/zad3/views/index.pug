doctype html
- var zad3 = true

html(lang='en')
    head
        meta(charset='utf-8')
        meta(name='viewport' content='width=device-width, initial-scale=1')
        title Third Express application
    body
        main
            h1 Third Express application

            form(method='POST' action='/')
                label(for='name') Give your name
                input(name='name')
                br
                input(type='submit')
                input(type='reset')
            img(src='/img/kotki.png')

            table(border='1')
                thead
                    tr
                        th Nazwisko
                        th Imię
                        if zad3
                            th Wydział
                tbody
                    each student in students
                        tr
                            td= student.nazwisko
                            td= student.imie 
                            if zad3 
                                td= student.wydzial
